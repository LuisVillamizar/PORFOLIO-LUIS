---
import Linkedin from "../icons/Linkedin.astro";
import Github from "../icons/Github.astro";
---

<div class="h-full flex flex-col justify-center">
  <button
    id="socialLinks"
    class="flex flex-col gap-4 text-white lg:bg-dark-900 hover:bg-teal-700 rounded-tr-2xl rounded-br-2xl p-4 transition-all ease-in-out duration-500"
  >
    <a
      class="flex flex-row gap-2 lg:text-dark lg:hover:text-slate-200 items-end"
      href="https://www.linkedin.com/in/-luisvillamizar/"
      target="_blank"
    >
      <Linkedin classes="h-8" />
    </a>
    <a
      class="flex flex-row gap-2 lg:text-dark lg:hover:text-slate-200 items-end"
      href="https://github.com/LuisVillamizar"
      target="_blank"
    >
      <Github classes="h-8" />
    </a>
  </button>
</div>
